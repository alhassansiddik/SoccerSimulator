<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siddik.soccersimulator.GoalServiceActivity">

    <TextView
        android:id="@+id/activity_service_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Waiting"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="30sp" />


    <Button
        android:id="@+id/activity_service_start"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Start Goal Service"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/activity_service_stop"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Stop Goal Service"
        android:textSize="30sp"/>

</LinearLayout>
