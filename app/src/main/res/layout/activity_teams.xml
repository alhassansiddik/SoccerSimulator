<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siddik.soccersimulator.TeamsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_centerInParent="true"
            android:text="Select Your Team"
            android:gravity="center"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/activity_radio_group"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <RadioButton
            android:id="@+id/dia100000"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Barcelona"/>
        <RadioButton
            android:id="@+id/dia200000"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Arsenal"/>
        <RadioButton
            android:id="@+id/dia300000"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="PSG"/>
        <RadioButton
            android:id="@+id/dia400000"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Juventus"/>
    </RadioGroup>

    <Button
        android:id="@+id/activity_radio_group_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="OK"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
